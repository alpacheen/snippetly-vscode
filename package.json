{
  "name": "snippetly",
  "displayName": "Snippetly",
  "description": "Save and search code snippets with AI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "snippets",
    "code",
    "save",
    "search",
    "productivity"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snippetly.saveSnippet",
        "title": "Snippetly: Save Selected Code",
        "icon": "$(save)"
      },
      {
        "command": "snippetly.searchSnippets",
        "title": "Snippetly: Search Snippets",
        "icon": "$(search)"
      },
      {
        "command": "snippetly.syncSnippets",
        "title": "Snippetly: Sync with Cloud",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "snippetly.deleteSnippet",
        "title": "Snippetly: Delete Snippet",
        "icon": "$(trash)"
      }
    ],
    "keybindings": [
      {
        "command": "snippetly.saveSnippet",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "snippetly.searchSnippets",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "snippetly.saveSnippet",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Snippetly",
      "properties": {
        "snippetly.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000/api",
          "description": "Snippetly API URL"
        },
        "snippetly.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Snippetly API key (optional)"
        },
        "snippetly.useAPI": {
          "type": "boolean",
          "default": false,
          "description": "Enable cloud sync with Snippetly API"
        },
        "snippetly.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync snippets when online"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/node-fetch": "^2.6.13",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/snippetly-vscode"
  },
  "publisher": "your-publisher-name",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#0066CC",
    "theme": "dark"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
